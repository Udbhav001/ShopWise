<script>
	$(document).ready(function(){
		$("#createUserBtn").on("click" , function(){
			window.location = "[[@{/users/new}]]";
		});
	});
	
	$(document).ready(function(){
		$(".link-delete").on("click",function(e){
			e.preventDefault();
			link = $(this)
			//alert($(this).attr("href"));
			userId = $(this)
			$("#confirmText").text("Are you sure you want to delete user ID " + userId);
			$("#confirmModal").modal();
		});
	});
</script>
